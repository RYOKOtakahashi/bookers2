<div class="onepage-container">

  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

     <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, class: "name", autofocus: true, id:"inputName" %>
      </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "email", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, class: "password", autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class: "password_confirm", autocomplete: "off" %>
    </div>

      <input type="submit" value="Sign up" class="btn btn-success" data-disable-with="Sign up">
      <!-- <input> <button type="button" class="btn btn-success">
        <%#= f.submit "Sign up" %>
      </button> </input> -->

      <p> <%= render "devise/shared/links" %> </p>

  <% end %>

</div>

