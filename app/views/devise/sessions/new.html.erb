<div class="onepage-container">

  <h2 >Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: "name", autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :Password %><br />
      <%= f.password_field :password, class: "password", autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

      <input type="submit" value="Log in" class="btn btn-primary" data-disable-with="Log in">
      <!-- <button class="btn btn-primary">
        <%#= f.submit "Log in" %>
      </button> -->

      <p> <%= render "devise/shared/links" %> </p>

  <% end %>

</div>
