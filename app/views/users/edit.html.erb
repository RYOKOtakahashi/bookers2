<div class="form-user style-1 rounded has-shadow-1">

    <div class="form-header text-center">
       <h2 class="form-header-title"> User info </h2>
    </div>

    <div class="form-body">
             <%= form_for(@user) do |f| %>
                  <label class="control-label sr-only" for="inputEmail"> Name </label>
                  <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>

                   <p class="control-label sr-only" for="inputEmail"> Image </p>
                   <%= f.attachment_field :image %>

                   <p> <label class="control-label sr-only" for="inputEmail"> Introduction </label>
                    <%= f.text_field :introduction, autofocus: true, placeholder:""%>
                   <%#= f.text_field :introduction, autofocus: true, class:"form-control", id:"inputEmail", placeholder:""%>
                    <span class="fa fa-user form-control-icon" aria-hidden="true"></span> </p>
                    <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
              <% end %>
    </div>
</div>



