<p class="notice">  </p>

<div class="body clearfix">
      <div class="my-container">
                  <div class="my-container-left">
                        <h2> User info </h2>
                        <%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image-1.png" %>
                        <table class="table">
                              <tr> </tr>
                              <tr>
                                    <th> name </th>
                                    <th> <%= current_user.name %> </th>
                              </tr>
                              <tr>
                                    <th> introduction </th>
                                    <th> <%= current_user.introduction %> </th>
                              </tr>
                        </table>
                        <p>
                              <a href="/users/<%= @user.id %>/edit" class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{@user.id}"> </a>
                        </p>
                        <div>
                              <div class=message> 
                                    <% @book.errors.full_messages.each do |message| %>
                                    <%= message%>
                                    <% end%> 
                              </div>

                              <h2> New book </h2>

                              <%= form_for(@book) do |f| %>
                              <h5> Title </h5>
                              <%= f.text_field :title, class: "book_title" %>

                              <h5> Opinion </h5>
                              <%= f.text_area :opinion, class: "book_body" %>

                              <p> <%= f.submit 'Create Book' %> </p>
                              <% end %>

                        </div>
                  </div>

            <div class="my-container-right">
                  <div>
                        <h2> Books </h2>
                  </div>

                  <div>
                        <table class="table table-hover">
                              <thread>
                                    <th></th>
                                    <th> Title </th>
                                    <th> Opinion </th>
                                    <th colspan="3"> </th>
                              </thread>

                              <tbody>
                                    <% @books.each do |book| %>
                                          <tr>
                                              <td> <%= link_to user_path(book.user_id), class: "user_#{book.user.id}" do %> 
                                                      <%= attachment_image_tag @user, :image, :fill, 30, 30, format: 'jpeg' %> 
                                                   <% end %>
                                              </td>
                                              <td> <%= link_to book_path(book.id), class: "book_#{book.id}" do %> 
                                                <%= book.title %> <%#= link_to "", book_path(f.id) %> 
                                                <% end %>
                                          </td>
                                              <td> <%= book.opinion %> </td>
                                          </tr>
                                    <% end %>
                              </tbody>
                        </table>
                  </div>
            </div>
      </div>
</div>